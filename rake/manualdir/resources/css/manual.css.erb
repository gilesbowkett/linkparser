/* @group Examples */
div.caption {
	font-size: 12px;
	text-align: center;
	padding: 0.25em 0;
	border-top: 1px solid #787890;
}
div.example {
	border: 3px solid #787890;
	margin: 0.5em 1em;
	padding: 0;
	font: 14px Monaco, Profont, "Andale Mono", mono;
}
div.example pre {
	line-height: 1.2em;
	margin: 0;
	padding: 0;
}

pre.deveiate .line-numbers {
	background-color: #474860;
	color: #f3f3f3;
}

